{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "lib": [
            "ES2021.String"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
    }
}